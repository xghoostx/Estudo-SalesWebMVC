@model IEnumerable<SalesWebMVC.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}



<section class="container-fluid">

    <h2>@ViewData["Title"]</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr class="success">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BaseSalary)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td> <button type="button" class="btn btn-info" asp-route-id="@item.Id">  Edit </button> </td>
                <td> <button type="button" class="btn btn-warning" asp-route-id="@item.Id">  Details </button> </td>
                <td> <button type="button" class="btn btn-danger" asp-route-id="@item.Id">  Delete </button> </td>
            </tr>
            }
        </tbody>
    </table>
</section>


