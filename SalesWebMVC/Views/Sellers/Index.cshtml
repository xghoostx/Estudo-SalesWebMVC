@model IEnumerable<SalesWebMVC.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}



<section class="container-fluid">

    <h2>@ViewData["Title"]</h2>
    <p>
        <a asp-action="Create" class="btn btn-warning">Create</a>
    </p>
    <table class="table table-striped table-hover">

        <thead>
            <tr class="success">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BaseSalary)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BaseSalary)
                    </td>
                    <td align="right">

                            <a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.Id">  Edit </a>
                            <a asp-action="Details" class="btn btn-default btn-sm" asp-route-id="@item.Id">  Details </a>
                            <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">  Delete </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>


